!!! 5
%html
    %head
        %title Mi Blog
        %meta{:charset => "UTF-8"}
        %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
        %link{:href => "https://fonts.googleapis.com/icon?family=Material+Icons", :rel => "stylesheet"}
        %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-alpha.2/css/materialize.min.css", :rel => "stylesheet"}
        %link{:href => "../assets/css/main.css", :rel => "stylesheet"}
    
    %body
    - include('../config/controllers/FunctionController.php');
    - $data = new FunctionController();
    - ob_start();
    - session_start();

        <!-- Barra de navegación noob -->
        %nav.white
            %div.nav-wrapper
                %a{:href => "#!", "data-target" => "mobile-demo", :class => "sidenav-trigger"}
                    %i.material-icons.coral menu
                %div.container
                    %a{:href => "index.php", :class => "brand-logo"} Mi Blog
                    %ul.right.hide-on-med-and-down
                        - $data->getCurrentUser();

            %ul.sidenav#mobile-demo
                - $data->getCurrentUser();

        <!-- Ventanas de Sesión y Registro -->
        - if(isset($_GET['userLogin'])){ 
        -    include('user/user_login.php'); 
        - }elseif(isset($_GET['userSignup'])){ 
        -    include('user/user_signup.php'); 
        - }elseif(isset($_GET['idNote'])){
        -    include('user/showNote.php');
        - }else{ 
        -    include('user/template.php'); 
        - }

        

        %script{:src => "https://code.jquery.com/jquery-3.2.1.min.js"}
        %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-alpha.2/js/materialize.min.js"}
        %script{:src => "../assets/js/main.js"}